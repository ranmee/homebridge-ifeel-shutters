{
  "pluginAlias": "iFeelShutters",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "iFeelShutters"
      },
      "hubIP": {
        "title": "The i-feel local network hub ip address.",
        "type": "string",
        "format": "ipv4",
        "required": true
      },
      "email": {
        "title": "Email used to log in your i-feel account",
        "type": "string",
        "format": "email",
        "required": true
      },
      "password": {
        "title": "Your i-feel account password",
        "type": "string",
        "required": true
      },
      "maxTimeoutTime": {
        "title": "Maximum time (in seconds) it takes your slowest shutter to open/close",
        "type": "integer",
        "default": 32,
        "minimum": 1,
        "maximum": 120,
        "required": true
      }
    }
  }
}